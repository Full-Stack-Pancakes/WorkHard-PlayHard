<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.revature.pojos.Event">
		<id name="id" column="EVENTID">
			<generator class="increment"></generator>
		</id>
		<property name="priority" type="org.hibernate.type.IntegerType" column="PRIORITY"></property>
		<property name="eventlength" type="org.hibernate.type.TimeType" column="EVENTLENGTH"></property>
		<property name="starttime" type="org.hibernate.type.TimeType" column="STARTTIME"></property>
		<property name="eventtype" type="org.hibernate.type.TimeType" column="EVENTTYPE"></property>
		<property name="splitable" type="org.hibernate.type.BooleanType" column="SPLITABLE"></property>
		<property name="minlength" type="org.hibernate.type.TimeType" column="MINLENGTH"></property>
		<property name="inputtime" type="org.hibernate.type.TimeType" column="INPUTTIME"></property>
		<property name="dayofweek" type="org.hibernate.type.StringType" column="DAYOFWEEK"></property>
		<property name="startdate" type="org.hibernate.type.DateType" column="STARTDATE"></property>
		
	</class>
</hibernate-mapping>